# Django Core Settings
DJANGO_SECRET_KEY=change_this_to_a_very_strong_random_production_secret_key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://remitscout_user:secure_password_here@localhost:5432/remitscout

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=

# Cache TTL Settings (in seconds)
QUOTE_CACHE_TTL=1800
CORRIDOR_CACHE_TTL=43200
CORRIDOR_RATE_CACHE_TTL=10800
PROVIDER_CACHE_TTL=86400
JITTER_MAX_SECONDS=300

# Security Settings
CSRF_TRUSTED_ORIGINS=https://yourdomain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Provider API Keys
RIA_API_USERNAME=your_ria_username
RIA_API_PASSWORD=your_ria_password

# Add other provider API keys
WISE_API_KEY=your_wise_api_key
XE_API_KEY=your_xe_api_key
REMITLY_API_KEY=your_remitly_api_key
XOOM_API_KEY=your_xoom_api_key
TRANSFERGO_API_KEY=your_transfergo_api_key
WESTERN_UNION_API_KEY=your_western_union_api_key
PAYSEND_API_KEY=your_paysend_api_key
ALANSARI_API_KEY=your_alansari_api_key
REMITBEE_API_KEY=your_remitbee_api_key
INSTAREM_API_KEY=your_instarem_api_key
PANGEA_API_KEY=your_pangea_api_key
KORONAPAY_API_KEY=your_koronapay_api_key
MUKURU_API_KEY=your_mukuru_api_key
REWIRE_API_KEY=your_rewire_api_key
SENDWAVE_API_KEY=your_sendwave_api_key
WIREBARLEY_API_KEY=your_wirebarley_api_key
ORBITREMIT_API_KEY=your_orbitremit_api_key
DAHABSHIIL_API_KEY=your_dahabshiil_api_key
INTERMEX_API_KEY=your_intermex_api_key
PLACID_API_KEY=your_placid_api_key
REMITGURU_API_KEY=your_remitguru_api_key

# ScrapeOps Configuration
SCRAPEOPS_API_KEY=your_scrapeops_api_key
SCRAPEOPS_RENDER_JS=1
SCRAPEOPS_USE_RESIDENTIAL=1
SCRAPEOPS_TIMEOUT=60

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/remitscout

# Email Configuration (for error notifications)
EMAIL_HOST=smtp.yourmailprovider.com
EMAIL_PORT=587
EMAIL_HOST_USER=notifications@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=notifications@yourdomain.com
SERVER_EMAIL=errors@yourdomain.com
ADMINS=Your Name <your.email@example.com>

# Optional: Default proxy country (ISO 2-letter country code)
# SCRAPEOPS_PROXY_COUNTRY=US

# Optional: Request timeout in seconds
# SCRAPEOPS_TIMEOUT=60

# Optional: Enable/disable JavaScript rendering (1=enabled, 0=disabled)
# SCRAPEOPS_RENDER_JS=1

# Optional: Use residential proxies (1=enabled, 0=disabled)
# SCRAPEOPS_USE_RESIDENTIAL=1
